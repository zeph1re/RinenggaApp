<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".view.assignment.AssignmentDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugeng Rawuh"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setelah anda menyelesaikan pembahasan materi anda akan diberikan kesepatan untuk menguji kompetensi anda!!"
            android:layout_marginVertical="20dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semua soal disini berupa pilihan ganda \nAnda akan mendapatkan nilai di akhir sesi"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="X IPS 2"
            android:layout_margin="32dp"
            android:paddingStart="16dp"
            android:background="@drawable/edit_text_background"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjut" />



    </LinearLayout>

</RelativeLayout>