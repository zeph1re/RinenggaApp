<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".view.assignment.AssignmentResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/congratulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selamat"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anda_mendapatkan_nilai"
            android:textSize="20sp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/result_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_score"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_below="@id/congratulation"
        android:gravity="center_horizontal"
        android:layout_marginVertical="24dp"/>

    <TextView
        android:id="@+id/assignment_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pawulang_telah_diselesaikan"
        android:textSize="20sp"
        android:layout_below="@id/result_number"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/questionAnswered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="20sp"
            android:layout_marginHorizontal="32dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/assignment_done"/>

</RelativeLayout>