<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".view.assignment.AssignmentResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/congratulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat!!"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anda mendapatkan nilai :"
            android:textSize="18sp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/result_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="90"
        android:textSize="30sp"
        android:layout_below="@id/congratulation"
        android:gravity="center_horizontal"
        android:layout_marginVertical="24dp"/>

    <TextView
        android:id="@+id/assignment_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pawulang telah diselesaikan"
        android:textSize="18sp"
        android:layout_below="@id/result_number"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/questionAnswered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:layout_marginHorizontal="32dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/assignment_done"/>

</RelativeLayout>