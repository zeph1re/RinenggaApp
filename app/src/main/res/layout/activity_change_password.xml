<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.profile.ChangePasswordActivity">

    <TextView
        android:id="@+id/changePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Ubah Password"
        app:layout_constraintBottom_toTopOf="@id/password_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/password_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/edit_text_background"

        app:layout_constraintBottom_toTopOf="@id/re_password_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changePasswordTitle" />

    <EditText
        android:id="@+id/re_password_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edit_text_background"


        app:layout_constraintBottom_toTopOf="@id/changePassword_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_change" />

    <Button
        android:id="@+id/changePassword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re_password_change" />


</androidx.constraintlayout.widget.ConstraintLayout>