<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_10"
    tools:context=".view.assignment.AssignmentFragment">

    <ProgressBar
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:minHeight="10dp"
        android:progress="1"
        android:indeterminate="false"
        android:progressTint="@color/primary_80"
        android:progressBackgroundTint="@color/primary_30"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="16dp">


            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="What does country this flag belongs to?"
                android:textSize="25sp"
                android:paddingHorizontal="20dp"
                android:textColor="#333333"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center_vertical">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginEnd="16dp"
                    android:progressTint="@color/primary_80"
                    android:progressBackgroundTint="@color/primary_30"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/4"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/optionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="option 1"
                android:textSize="17sp"
                android:paddingVertical="16dp"
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/optionTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="option 2"
                android:textSize="17sp"
                android:paddingVertical="16dp"
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/optionThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="option 3"
                android:textSize="17sp"
                android:paddingVertical="16dp"
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/optionFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="option 4"
                android:textSize="17sp"
                android:paddingVertical="16dp"
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:paddingVertical="16dp"
                android:textAllCaps="false"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:layout_marginBottom="32dp"
                />
        </LinearLayout>


    </ScrollView>





</RelativeLayout>